# API Keys
# Pour le traitement IA (résumés, traductions, catégorisation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optionnel: Alternative avec OpenAI
# OPENAI_API_KEY=your_openai_api_key_here

# Configuration des chemins
OUTPUT_DIR=./output/newsletters
CACHE_DIR=./cache
TEMPLATES_DIR=./templates
CONFIG_DIR=./config

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/newsletter_generator.log

# Scraping Configuration
SCRAPING_TIMEOUT=30
SCRAPING_RETRY_ATTEMPTS=2
SCRAPING_MAX_WORKERS=5  # Nombre de threads pour scraping parallèle

# Newsletter Configuration
DEFAULT_LOOKBACK_DAYS=7
MIN_ARTICLES_TOTAL=25
MAX_ARTICLES_PER_SOURCE=3

# Optionnel: Gmail API (si vous voulez scraper les emails directement)
# GMAIL_CLIENT_ID=your_gmail_client_id
# GMAIL_CLIENT_SECRET=your_gmail_client_secret
# GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# Mode de développement
DEV_MODE=false  # Si true, utilise des données de cache pour tests rapides
DRY_RUN=false   # Si true, ne génère pas le HTML final
